@model WeldingExpertSystem.Models.User
@using WeldingExpertSystem.Common;     
@using WeldingExpertSystem.Models    
@{
  Layout = "~/Views/User/_Layout.cshtml";
}

<table>
    <tr>
        <th>
            用户名
        </th>
        <th>
            用户角色
        </th>
        <th>
            真实姓名
        </th>
        <th>
            工号
        </th>
    </tr>

    <tr>
      <td>
          @Html.DisplayFor(item => item.UserName)
      </td>
      <td>
          @Html.DisplayFor(item => item.Role.ToEnumClass<UserRole>().Name)
      </td>
      <td>
          @Html.DisplayFor(item => item.RealName)
      </td>
      <td>
          @Html.DisplayFor(item => item.WorkerID)
      </td>
  </tr>
</table>