@using WeldingExpertSystem.Common;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div id="header" class="container">
            <div class="navbar-collapse collapse">
                <ul id="mainmenu" class="nav navbar-nav">
                    <li id="show_taskmenu">产品焊接工艺任务</li>
                    <li id="show_weldermenu">焊工管理</li>
                    <li id="show_materialmenu">材料管理</li>
                    <li id="show_techmenu">焊接工艺技术</li>
                    <li id="show_progressmenu">进度控制</li>
                    <li id="show_qualitymenu">焊接质量</li>
                    <li id="show_settingmenu">系统设置</li>
                </ul>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="submenu">
                <ul id="settingmenu">
                    <li>@Html.ActionLink("用户管理", "Index", "User")</li>
                </ul>
                <ul id="materialmenu">
                    <li>@Html.ActionLink("母材管理", "Index", "ParentMetal")</li>
                    <li>@Html.ActionLink("焊材管理", "Index", "WeldingMaterial")</li>
                </ul>
                <ul id="qualitymenu">
                    <li>@Html.ActionLink("质量管理", "About", "Home")</li>
                </ul>
                <ul id="taskmenu">
                    <li>@Html.ActionLink("产品焊接工艺任务产品焊接工艺任务", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div id="main" class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Test</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/weldingexpert")
    @RenderSection("scripts", required: false)
</body>
</html>
